@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <section>
        <h2>Overview</h2>
        <p>This privacy policy outlines how we collect and use information on our website.</p>
    </section>

    <section>
        <h2>Information Collection</h2>
        <p>We use cookies to remember your selected theme preferences.</p>
    </section>

    <section>
        <h2>Usage of Your Information</h2>
        <p>Your selected theme preference will be retained when you revisit our site, providing a consistent experience.</p>
    </section>

    <section>
        <h2>Changes to Privacy Policy</h2>
        <p>We may update this privacy policy periodically, and any changes will be posted on this page.</p>
    </section>
</div>
